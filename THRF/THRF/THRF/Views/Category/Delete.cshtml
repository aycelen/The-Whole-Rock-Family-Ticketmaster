@model THRF.Models.Model.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Kategori Adı        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatName)
        </dd>

        <dt>Kategori Açıklaması        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatExp)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
