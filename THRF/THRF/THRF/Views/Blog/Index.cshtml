@model IEnumerable<THRF.Models.Model.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Yeni Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogHead)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogCont)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogHead)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogCont)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.BlogId }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.BlogId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.BlogId })
        </td>
    </tr>
}

</table>
